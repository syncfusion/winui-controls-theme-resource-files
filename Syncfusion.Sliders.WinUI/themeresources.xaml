<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <ResourceDictionary.ThemeDictionaries>
        <ResourceDictionary x:Key="Light">
            <x:Double x:Key="SyncfusionSliderInnerThumbHeight">12</x:Double>
            <x:Double x:Key="SyncfusionSliderInnerThumbWidth">12</x:Double>
            <x:Double x:Key="SyncfusionSliderActiveTrackCornerRadius">2</x:Double>
            <x:Double x:Key="SyncfusionSliderInactiveTrackCornerRadius">2</x:Double>
            <x:Double x:Key="SyncfusionSliderFocusRectangleCornerRadius">2</x:Double>
            <x:Double x:Key="SyncfusionSliderThumbOverlayOpacity">0.3</x:Double>
            <x:Double x:Key="SyncfusionSliderInactiveTrackHeight">4</x:Double>
            <x:Double x:Key="SyncfusionSliderActiveTrackHeight">4</x:Double>
            <LinearGradientBrush x:Key="SyncfusionSliderOuterThumbBorderBrush" MappingMode="Absolute" StartPoint="0,0" EndPoint="0,3">
                <LinearGradientBrush.GradientStops>
                    <GradientStop Offset="0.33" Color="{StaticResource ControlStrokeColorSecondary}"/>
                    <GradientStop Offset="1.0" Color="{StaticResource ControlStrokeColorDefault}"/>
                </LinearGradientBrush.GradientStops>
            </LinearGradientBrush>
            <SolidColorBrush x:Key="SyncfusionSliderOuterThumbBackground"
                             Color="{StaticResource ControlSolidFillColorDefault}" />
            <SolidColorBrush x:Key="SyncfusionSliderForeground"
                             Color="{StaticResource TextFillColorPrimary}" />
            <SolidColorBrush x:Key="SyncfusionSliderBorderBrush"
                             Color="{StaticResource SystemBaseLowColor}" />
            <SolidColorBrush x:Key="SyncfusionSliderMajorTickStroke"
                             Color="{StaticResource TextFillColorDisabled}" />
            <SolidColorBrush x:Key="SyncfusionSliderMinorTickStroke"
                             Color="{StaticResource TextFillColorDisabled}" />
            <SolidColorBrush x:Key="SyncfusionSliderToolTipForeground"
                             Color="{StaticResource TextFillColorPrimary}" />
            <SolidColorBrush x:Key="SyncfusionSliderToolTipBackground"
                             Color="{StaticResource SolidBackgroundFillColorTertiary}" />
            <SolidColorBrush x:Key="SyncfusionSliderToolTipBorderBrush"
                             Color="{StaticResource SurfaceStrokeColorFlyout}" />
            <SolidColorBrush x:Key="SyncfusionSliderThumbOverlayFill"
                             Color="{ThemeResource SystemAccentColor}" />
            <SolidColorBrush x:Key="SyncfusionSliderDividerFill"
                             Color="{StaticResource TextFillColorSecondary}" />
            <SolidColorBrush x:Key="SyncfusionSliderDividerStroke"
                             Color="{StaticResource TextFillColorSecondary}" />

            <!--Static brush-->
            <SolidColorBrush x:Key="SyncfusionSliderInactiveTrackFill"
                             Color="{StaticResource SystemBaseMediumLowColor}" />
            <SolidColorBrush x:Key="SyncfusionSliderActiveTrackFill"
                             Color="{ThemeResource SystemAccentColorDark1}" />
            <SolidColorBrush x:Key="SyncfusionSliderThumbBackground"
                             Color="{ThemeResource SystemAccentColorDark1}" />

            <!--Pointer pressed brush-->
            <SolidColorBrush x:Key="SyncfusionSliderActiveTrackFillPressed"
                             Color="{ThemeResource SystemAccentColorDark1}" />
            <SolidColorBrush x:Key="SyncfusionSliderInactiveTrackFillPressed"
                             Color="{StaticResource SystemBaseMediumLowColor}" />
            <SolidColorBrush x:Key="SyncfusionSliderThumbBackgroundPressed"
                             Color="{ThemeResource SystemAccentColor}" />

            <!--Disabled brush-->
            <SolidColorBrush x:Key="SyncfusionSliderInactiveTrackFillDisabled"
                             Color="{StaticResource SystemBaseLowColor}" />
            <SolidColorBrush x:Key="SyncfusionSliderActiveTrackFillDisabled"
                             Color="{StaticResource AccentFillColorDisabled}" />
            <SolidColorBrush x:Key="SyncfusionSliderThumbBackgroundDisabled"
                             Color="{StaticResource SystemFillColorSolidNeutral}" />
            <SolidColorBrush x:Key="SyncfusionSliderBackgroundDisabled"
                             Color="{StaticResource AccentFillColorDisabled}" />

            <!--Pointer hover brush-->
            <SolidColorBrush x:Key="SyncfusionSliderInactiveTrackFillPointerOver"
                             Color="{StaticResource SystemBaseMediumLowColor}" />
            <SolidColorBrush x:Key="SyncfusionSliderActiveTrackFillPointerOver"
                             Color="{ThemeResource SystemAccentColorDark1}" />
            <SolidColorBrush x:Key="SyncfusionSliderThumbBackgroundPointerOver"
                             Color="{ThemeResource SystemAccentColorDark1}" />
        </ResourceDictionary>

        <ResourceDictionary x:Key="Dark">
            <x:Double x:Key="SyncfusionSliderInnerThumbHeight">12</x:Double>
            <x:Double x:Key="SyncfusionSliderInnerThumbWidth">12</x:Double>
            <x:Double x:Key="SyncfusionSliderActiveTrackCornerRadius">2</x:Double>
            <x:Double x:Key="SyncfusionSliderInactiveTrackCornerRadius">2</x:Double>
            <x:Double x:Key="SyncfusionSliderFocusRectangleCornerRadius">2</x:Double>
            <x:Double x:Key="SyncfusionSliderThumbOverlayOpacity">0.3</x:Double>
            <x:Double x:Key="SyncfusionSliderInactiveTrackHeight">4</x:Double>
            <x:Double x:Key="SyncfusionSliderActiveTrackHeight">4</x:Double>
            <LinearGradientBrush x:Key="SyncfusionSliderOuterThumbBorderBrush" MappingMode="Absolute" StartPoint="0,0" EndPoint="0,3">
                <LinearGradientBrush.GradientStops>
                    <GradientStop Offset="0.33" Color="{StaticResource ControlStrokeColorSecondary}"/>
                    <GradientStop Offset="1.0" Color="{StaticResource ControlStrokeColorDefault}"/>
                </LinearGradientBrush.GradientStops>
            </LinearGradientBrush>
            <SolidColorBrush x:Key="SyncfusionSliderOuterThumbBackground"
                             Color="{StaticResource ControlSolidFillColorDefault}" />
            <SolidColorBrush x:Key="SyncfusionSliderForeground"
                             Color="{StaticResource TextFillColorPrimary}" />
            <SolidColorBrush x:Key="SyncfusionSliderBorderBrush"
                             Color="{StaticResource SystemBaseLowColor}" />
            <SolidColorBrush x:Key="SyncfusionSliderMajorTickStroke"
                             Color="{StaticResource ControlStrongStrokeColorDefault}" />
            <SolidColorBrush x:Key="SyncfusionSliderMinorTickStroke"
                             Color="{StaticResource ControlStrongStrokeColorDefault}" />
            <SolidColorBrush x:Key="SyncfusionSliderToolTipForeground"
                             Color="{StaticResource TextFillColorPrimary}" />
            <SolidColorBrush x:Key="SyncfusionSliderToolTipBackground"
                             Color="{StaticResource SolidBackgroundFillColorTertiary}" />
            <SolidColorBrush x:Key="SyncfusionSliderToolTipBorderBrush"
                             Color="{StaticResource SurfaceStrokeColorFlyout}" />
            <SolidColorBrush x:Key="SyncfusionSliderThumbOverlayFill"
                             Color="{ThemeResource SystemAccentColor}" />
            <SolidColorBrush x:Key="SyncfusionSliderDividerFill"
                             Color="{StaticResource TextFillColorSecondary}" />
            <SolidColorBrush x:Key="SyncfusionSliderDividerStroke"
                             Color="{StaticResource TextFillColorSecondary}" />

            <!--Static brush-->
            <SolidColorBrush x:Key="SyncfusionSliderInactiveTrackFill"
                             Color="{StaticResource ControlStrongFillColorDefault}" />
            <SolidColorBrush x:Key="SyncfusionSliderActiveTrackFill"
                             Color="{ThemeResource SystemAccentColorLight2}" />
            <SolidColorBrush x:Key="SyncfusionSliderThumbBackground"
                             Color="{ThemeResource SystemAccentColorLight2}" />

            <!--Pointer pressed brush-->
            <SolidColorBrush x:Key="SyncfusionSliderActiveTrackFillPressed"
                             Color="{ThemeResource SystemAccentColorLight2}" />
            <SolidColorBrush x:Key="SyncfusionSliderInactiveTrackFillPressed"
                             Color="{StaticResource ControlStrongFillColorDefault}" />
            <SolidColorBrush x:Key="SyncfusionSliderThumbBackgroundPressed"
                             Color="{ThemeResource SystemAccentColorLight1}" />

            <!--Disabled brush-->
            <SolidColorBrush x:Key="SyncfusionSliderInactiveTrackFillDisabled"
                             Color="{StaticResource ControlStrongFillColorDisabled}" />
            <SolidColorBrush x:Key="SyncfusionSliderActiveTrackFillDisabled"
                             Color="{StaticResource AccentFillColorDisabled}" />
            <SolidColorBrush x:Key="SyncfusionSliderThumbBackgroundDisabled"
                             Color="{StaticResource SystemFillColorSolidNeutral}" />
            <SolidColorBrush x:Key="SyncfusionSliderBackgroundDisabled"
                             Color="{StaticResource TextFillColorDisabled}" />

            <!--Pointer hover brush-->
            <SolidColorBrush x:Key="SyncfusionSliderInactiveTrackFillPointerOver"
                             Color="{StaticResource ControlStrongFillColorDefault}" />
            <SolidColorBrush x:Key="SyncfusionSliderActiveTrackFillPointerOver"
                             Color="{ThemeResource SystemAccentColorLight2}" />
            <SolidColorBrush x:Key="SyncfusionSliderThumbBackgroundPointerOver"
                             Color="{ThemeResource SystemAccentColorLight2}" />
        </ResourceDictionary>

        <ResourceDictionary x:Key="HighContrast">
            <x:Double x:Key="SyncfusionSliderInnerThumbHeight">12</x:Double>
            <x:Double x:Key="SyncfusionSliderInnerThumbWidth">12</x:Double>
            <x:Double x:Key="SyncfusionSliderActiveTrackCornerRadius">2</x:Double>
            <x:Double x:Key="SyncfusionSliderInactiveTrackCornerRadius">2</x:Double>
            <x:Double x:Key="SyncfusionSliderFocusRectangleCornerRadius">2</x:Double>
            <x:Double x:Key="SyncfusionSliderThumbOverlayOpacity">0.3</x:Double>
            <x:Double x:Key="SyncfusionSliderInactiveTrackHeight">4</x:Double>
            <x:Double x:Key="SyncfusionSliderActiveTrackHeight">4</x:Double>
            <SolidColorBrush x:Key="SyncfusionSliderOuterThumbBorderBrush" 
                             Color="{ThemeResource SystemColorButtonTextColor}" />
            <SolidColorBrush x:Key="SyncfusionSliderOuterThumbBackground"
                             Color="{StaticResource SystemColorButtonTextColor}" />
            <SolidColorBrush x:Key="SyncfusionSliderForeground"
                             Color="{ThemeResource SystemColorButtonTextColor}" />
            <SolidColorBrush x:Key="SyncfusionSliderBorderBrush"
                             Color="{ThemeResource SystemBaseLowColor}" />
            <SolidColorBrush x:Key="SyncfusionSliderMajorTickStroke"
                             Color="{ThemeResource SystemColorButtonTextColor}" />
            <SolidColorBrush x:Key="SyncfusionSliderMinorTickStroke"
                             Color="{ThemeResource SystemColorButtonTextColor}" />
            <SolidColorBrush x:Key="SyncfusionSliderToolTipForeground"
                             Color="{ThemeResource SystemColorWindowTextColor}" />
            <SolidColorBrush x:Key="SyncfusionSliderToolTipBackground"
                             Color="{ThemeResource SystemColorButtonFaceColor}" />
            <SolidColorBrush x:Key="SyncfusionSliderToolTipBorderBrush"
                             Color="{ThemeResource SystemColorWindowTextColor}" />
            <SolidColorBrush x:Key="SyncfusionSliderThumbOverlayFill"
                             Color="{ThemeResource SystemAccentColor}" />
            <SolidColorBrush x:Key="SyncfusionSliderDividerFill"
                             Color="{ThemeResource SystemBaseHighColor}" />
            <SolidColorBrush x:Key="SyncfusionSliderDividerStroke"
                             Color="{ThemeResource SystemBaseHighColor}" />

            <!--Static brush-->
            <SolidColorBrush x:Key="SyncfusionSliderInactiveTrackFill"
                             Color="{ThemeResource SystemChromeDisabledLowColor}" />
            <SolidColorBrush x:Key="SyncfusionSliderActiveTrackFill"
                             Color="{ThemeResource SystemAccentColor}" />
            <SolidColorBrush x:Key="SyncfusionSliderThumbBackground"
                             Color="{ThemeResource SystemColorButtonTextColor}" />

            <!--Pointer pressed brush-->
            <SolidColorBrush x:Key="SyncfusionSliderActiveTrackFillPressed"
                             Color="{ThemeResource SystemColorHighlightColor}" />
            <SolidColorBrush x:Key="SyncfusionSliderInactiveTrackFillPressed"
                             Color="{ThemeResource SystemChromeDisabledLowColor}" />
            <SolidColorBrush x:Key="SyncfusionSliderThumbBackgroundPressed"
                             Color="{ThemeResource SystemColorHotlightColor}" />

            <!--Disabled brush-->
            <SolidColorBrush x:Key="SyncfusionSliderInactiveTrackFillDisabled"
                             Color="{ThemeResource SystemChromeHighColor}" />
            <SolidColorBrush x:Key="SyncfusionSliderActiveTrackFillDisabled"
                             Color="{ThemeResource SystemChromeHighColor}" />
            <SolidColorBrush x:Key="SyncfusionSliderThumbBackgroundDisabled"
                             Color="{ThemeResource SystemColorGrayTextColor}" />
            <SolidColorBrush x:Key="SyncfusionSliderBackgroundDisabled"
                             Color="{ThemeResource SystemChromeHighColor}" />

            <!--Pointer hover brush-->
            <SolidColorBrush x:Key="SyncfusionSliderInactiveTrackFillPointerOver"
                             Color="{ThemeResource SystemChromeDisabledLowColor}" />
            <SolidColorBrush x:Key="SyncfusionSliderActiveTrackFillPointerOver"
                             Color="{ThemeResource SystemAccentColor}" />
            <SolidColorBrush x:Key="SyncfusionSliderThumbBackgroundPointerOver"
                             Color="{ThemeResource SystemAccentColorLight1}" />
        </ResourceDictionary>
    </ResourceDictionary.ThemeDictionaries>

</ResourceDictionary>